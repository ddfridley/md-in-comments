{
  "name": "md-in-comments",
  "displayName": "MD in Comments",
  "description": "Renders markdown formatting within comment blocks in code files",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Formatters",
    "Visualization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ddfri/md-comments"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md-in-comments.toggle",
        "title": "Toggle Markdown in Comments",
        "category": "MD in Comments"
      }
    ],
    "keybindings": [
      {
        "command": "md-in-comments.toggle",
        "key": "ctrl+shift+alt+m",
        "mac": "cmd+shift+alt+m",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "MD in Comments",
      "properties": {
        "mdInComments.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable markdown rendering in comments"
        },
        "mdInComments.supportedLanguages": {
          "type": "array",
          "default": ["typescript", "javascript", "python", "java", "csharp", "cpp", "c", "go", "rust", "php", "markdown"],
          "description": "List of programming languages where markdown in comments should be rendered"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
